@model OnlineShop.Models.Order

@{
    ViewBag.Title = "Pay";
    Layout = "~/Views/Shared/_RightSectionLayout.cshtml";
}





<div id="Pay">
    @using (@Html.BeginForm("Pay", "Basket"))
            {
        <table id="checkout-address-table">
            <tr>
                <td>@Html.LabelFor(o => o.Name, "Imie: ")</td>
                <td>@Html.TextBoxFor(o => o.Name)</td>
                <td>
                    <div class="pay-validation-message">
                    @Html.ValidationMessageFor(o => o.Name)
    </div>
</td>
            </tr>
        <tr>
            <td>@Html.LabelFor(o => o.Surname, "Nazwisko: ")</td>
            <td>@Html.TextBoxFor(o => o.Surname)</td>

            <td>
                <div class="pay-validation-message">
                    @Html.ValidationMessageFor(o => o.Surname) </div>
</td>
        </tr>
            <tr>
                <td>@Html.LabelFor(o => o.Address, "Adres: ")</td>
                <td>@Html.TextBoxFor(o => o.Address)</td>
                <td>
                    <div class="pay-validation-message">
                        @Html.ValidationMessageFor(o => o.Address)</div>
                        </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(o => o.City, "Miasto: ")</td>
                <td>@Html.TextBoxFor(o => o.City)</td>
                <td>
                    <div class="pay-validation-message"> @Html.ValidationMessageFor(o => o.City) </div>
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(o => o.PostCode, "Kod pocztowy: ")</td>
                <td>@Html.TextBoxFor(o => o.PostCode)</td>
                <td>
                    <div class="pay-validation-message">
                        @Html.ValidationMessageFor(o => o.PostCode)</div>
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(o => o.Phone, "Numer telefonu: ")</td>
                <td>@Html.TextBoxFor(o => o.Phone)</td>
                <td> <div class="pay-validation-message">@Html.ValidationMessageFor(o => o.Phone) </div>
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(o => o.Email, "E-mail: ")</td>
                <td>@Html.TextBoxFor(o => o.Email)</td>
                <td> <div class="pay-validation-message"> @Html.ValidationMessageFor(o => o.Email) </div>
                </td>
            </tr>
            <tr>
                <td><label for="Comment">Uwagi: </label></td>
                <td>
                    <textarea cols="40" rows="3" name="Komentarz">@Model.Comment</textarea>
                </td>
            </tr>
        </table>

        <div class="pay-validation-message">
            @Html.ValidationSummary()
            </div>

            <hr style="margin-bottom: 50px;" />

            <div class="SectionButtons">
                <a class="ButtonLink" href="">Cofnij</a>
                <input type="submit" class="ButtonLink" style="text-align: right;" value="Zatwierdz" />
            </div>
            }

        </div>